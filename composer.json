{
    "name": "ondrej-vrto/php-filename-sanitize",
    "description": "Removes all forbidden characters from the file name or path.",
    "keywords": [
        "ondrej vrto",
        "filename",
        "sanitize",
        "clean",
        "php"
    ],
    "homepage": "https://github.com/OndrejVrto/php-filename-sanitize",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Ondrej VrÅ¥o",
            "email": "ondrej.vrto@gmail.com",
            "homepage": "https://ondrejvrto.eu"
        }
    ],
    "require": {
        "php": ">=4.0.7"
    },
    "require-dev": {
        "php": "^8.1",
        "laravel/pint": "^1.2",
        "pestphp/pest": "^2.26",
        "phpstan/phpstan": "^1.9",
        "rector/rector": "^1.0.4"
    },
    "autoload": {
        "psr-4": {
            "OndrejVrto\\FilenameSanitize\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OndrejVrto\\FilenameSanitize\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
